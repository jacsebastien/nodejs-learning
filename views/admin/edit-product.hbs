<form class="basic-form" action="{{#if product}}/admin/edit-product{{else}}/admin/add-product{{/if}}" method="POST">
    <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="{{#if product}}{{product.title}}{{/if}}" />
    </div>
    <div class="form-control">
        <label for="imageUrl">Image URL</label>
        <input type="text" name="imageUrl" id="imageUrl" value="{{#if product}}{{product.imageUrl}}{{/if}}" />
    </div>
    <div class="form-control">
        <label for="price">Price</label>
        <input type="number" name="price" id="price" step="0.01" value="{{#if product}}{{product.price}}{{/if}}"/>
    </div>
    <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5">{{#if product}}{{product.description}}{{/if}}</textarea> 
    </div>

    {{#if product}}
        <input type="hidden" name="id" value="{{product.id}}">
    {{/if}}

    <button class="btn" type="submit">{{#if product}} Edit {{else}} Add {{/if}} Product</button>
</form>
