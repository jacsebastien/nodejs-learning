<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <div class="backdrop"></div>
    <header class="main-header">
        <button id="side-menu-toggle">Menu</button>
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item"><a class="{{#if active.shop}}active{{/if}}" href="/">Shop</a></li>
                <li class="main-header__item"><a class="{{#if active.products}}active{{/if}}" href="/products">Products</a></li>
                {{#if isAuthenticated}}
                    <li class="main-header__item"><a class="{{#if active.cart}}active{{/if}}" href="/cart">Cart</a></li>
                    <li class="main-header__item"><a class="{{#if active.orders}}active{{/if}}" href="/orders">Orders</a></li>
                    <li class="main-header__item"><a class="{{#if active.addProduct}}active{{/if}}" href="/admin/add-product">Add Product</a></li>
                    <li class="main-header__item"><a class="{{#if active.adminProducts}}active{{/if}}" href="/admin/products">Admin Products</a></li>
                {{/if}}
            </ul>
            <ul class="main-header__item-list">
                <li class="main-header__item"><a class="{{#if active.login}}active{{/if}}" href="/login">Login</a></li>
            </ul>
        </nav>
    </header>

    <nav class="mobile-nav">
        <ul class="mobile-nav__item-list">
            <li class="mobile-nav__item"><a class="{{#if active.shop}}active{{/if}}" href="/">Shop</a></li>
            <li class="mobile-nav__item"><a class="{{#if active.products}}active{{/if}}" href="/products">Products</a></li>
            <li class="mobile-nav__item"><a class="{{#if active.cart}}active{{/if}}" href="/cart">Cart</a></li>
            <li class="mobile-nav__item"><a class="{{#if active.orders}}active{{/if}}" href="/orders">Orders</a></li>
            <li class="mobile-nav__item"><a class="{{#if active.addProduct}}active{{/if}}" href="/admin/add-product">Add Product</a></li>
            <li class="mobile-nav__item"><a class="{{#if active.adminProducts}}active{{/if}}" href="/admin/products">Admin Products</a></li>
        </ul>
    </nav>
    <main>
        {{{ body }}}
    </main>
    <script src="/js/main.js"></script>
</body>

</html>